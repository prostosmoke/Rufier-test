<Screen1>:
    BoxLayout:
        orientation: 'vertical'
        padding: '8sp'
        spacing: '8sp'
        MDLabel:
            text: 'Отдохните и измерьте пульс 15 секунд'
            halign: 'center'
        MDTextField:
            id: p1_field
            hint_text: "Введите Ваш пульс"
            pos_hint: {"center_x": .5}
            size_hint_x: .5
        MDRaisedButton:
            text: 'Далее'
            font_size: '40sp'
            size_hint: 0.5, None
            pos_hint: {'center_x': 0.5}
            on_press:
                root.move_next()
                app.sm.transition.direction = 'left'
                app.sm.current = 'Screen2'

